<resources>

    <!--特殊-->
    <style name="HomeTheme" parent="CustomAppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Camera_Theme" parent="CustomAppTheme.FullScreen">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Camera_Theme.Translucent" parent="CustomAppTheme.FullScreen.Transparent">
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--对话框主题-->
    <style name="xg_dialog" parent="DialogBaseTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--进度对话框主题-->
    <style name="my_progress_dialog" parent="DialogBaseTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="black_progress_dialog" parent="DialogBaseTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>