<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="app_holo_theme" parent="@android:style/Theme.Holo.Light.NoActionBar" />

    <style name="app_theme" parent="app_compat_theme" />

    <style name="app_compat_theme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="app_dialog_holo_theme" parent="@android:style/Theme.Holo.Light.Dialog" />

    <style name="app_dialog_theme" parent="app_compat_dialog_theme" />

    <style name="app_compat_dialog_theme" parent="Theme.AppCompat.Light.Dialog" />

    <style name="ImageTranslucentTheme" parent="app_theme">
        <!-- true: status栏会有一层阴影；false: status栏没有阴影-->
        <item name="android:windowTranslucentStatus">false</item>
        <!-- 使底部导航栏透明 -->
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- 给status栏设置透明颜色 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppBaseTheme" parent="app_theme" />

    <style name="DialogBaseTheme" parent="app_dialog_theme" />

    <style name="app_ProgressBar" parent="@android:style/Widget.ProgressBar" />

    <style name="app_compat_ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">#666666</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="CustomProgressBar" parent="app_compat_ProgressBar" />

</resources>